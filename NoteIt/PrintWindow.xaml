<Window x:Class="NoteIt.PrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PrintWindow" Height="300" Width="300">
    <StackPanel>
        <TextBox>Choose exporting to PDF method:</TextBox>
        <RadioButton GroupName="Method" Name="verticalRadioButton"  IsChecked="True">Vertical allignment</RadioButton>
        <RadioButton GroupName="Method" Name="horizontalRadioButton">Horizontal allignment</RadioButton>
        
        <Button Click="Button_Click">Export!</Button>
    </StackPanel>
</Window>
